{
  "name": "cairo-backend",
  "version": "1.0.0",
  "description": "Modern Node.js RESTful API backend with TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "node esbuild.config.js",
    "dev:nodemon": "nodemon",
    "build": "node esbuild.config.js --production",
    "start": "node dist/server.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "tsoa:spec": "tsoa spec",
    "tsoa:routes": "tsoa routes",
    "tsoa:generate": "npm run tsoa:spec && npm run tsoa:routes",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix"
  },
  "keywords": [
    "express",
    "typescript",
    "rest-api",
    "backend"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.3",
    "swagger-ui-express": "^5.0.1",
    "tsoa": "^6.4.0",
    "winston": "^3.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@vitest/coverage-v8": "^2.1.1",
    "@vitest/ui": "^2.1.1",
    "esbuild": "^0.23.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^9.1.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.14.0",
    "vitest": "^2.1.1"
  }
}
